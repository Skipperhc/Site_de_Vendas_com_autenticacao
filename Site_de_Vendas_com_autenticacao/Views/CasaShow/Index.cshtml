@model Site_de_Vendas_com_autenticacao.Models.ViewModel.CasaShowViewModel

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="Criar" method="post">
            <input type="hidden" asp-for="CasaShow.Id" value="0">
            <div class="form-group col-md-4">
                <label asp-for="CasaShow.Nome" class="control-label"></label>
                <input asp-for="CasaShow.Nome" class="form-control"/>
                <span asp-validation-for="CasaShow.Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="CasaShow.Endereco" class="control-label"></label>
                <input asp-for="CasaShow.Endereco" class="form-control"/>
                <span asp-validation-for="CasaShow.Endereco" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="CasaShow.Capacidade" class="control-label"></label>
                <input asp-for="CasaShow.Capacidade" class="form-control"/>
                <span asp-validation-for="CasaShow.Capacidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-success"/>
            </div>
        </form>
    </div>
</div>

<table class="table table-striped table-hover">
    <thead>
    <tr class="bg-success">
        <th>
            @Html.DisplayNameFor(model => model.CasaShow.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CasaShow.Endereco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CasaShow.Capacidade)
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.ListaCasaShows) {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Capacidade)
            </td>

            <td>
                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                <form method="post" asp-action="Deletar" style="display: inline">
                    <input name="id" id="id" value="@item.Id" class="form-control" hidden/>
                    <input type="submit" value="Excluir" class="btn btn-danger"/>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

@section scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}