﻿@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model IEnumerable<Evento>

@{
    ViewData["Title"] = "Home Page";
}

<table class="table table-striped table-hover">
    <thead class="bg-success">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Genero.Imagem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.preco)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CasaShow)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Data)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QtdIngressos)
        </th>
        <th>
            Ações
        </th>
        <th>
            Realizar pedido
        </th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
            <img src="@Html.DisplayFor(modelitem => item.Genero.Imagem)" height="150" width="150" style="border-radius: 25%"/>
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.preco)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.CasaShow.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Genero.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelitem => item.Data)
            </td>
            <th>
                @Html.DisplayFor(modelitem => item.QtdIngressos)
            </th>
            <td>
                <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Detalhar" asp-route-id="@item.Id" class="btn btn-secondary">Detalhar</a>
                <form method="post" asp-action="Deletar" style="display: inline">
                    <input name="id" id="id" value="@item.Id" class="form-control" hidden/>
                    <input type="submit" value="Excluir" class="btn btn-danger"/>
                </form>
            </td>
            <td>
                <a asp-action="Comprar" asp-route-id="@item.Id" class="btn btn-success">Comprar</a>
            </td>
        </tr>
    }
    </tbody>
</table>