@model Site_de_Vendas_com_autenticacao.Models.ViewModel.EventoViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Detalhes do evento: @Html.DisplayFor(model => model.Evento.Nome)</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <input type="hidden" asp-for="Evento.Id">

            <div class="form-group">
                <label asp-for="Evento.Nome" class="control-label"></label>
                <input asp-for="Evento.Nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Evento.preco" class="control-label"></label>
                <input asp-for="Evento.preco" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Evento.Data" class="control-label"></label>
                <input asp-for="Evento.Data" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Evento.CasaShow" class="control-label"></label>
                <input asp-for="Evento.CasaShow.Nome" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Evento.Genero" class="control-label"></label>
                <input asp-for="Evento.Genero.Nome" class="form-control"/>
            </div>
            
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary">Voltar para a Lista</a>
            </div>
        </form>
    </div>
</div>